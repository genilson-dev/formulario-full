
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id               String     @id @default(uuid()) @map("id")
  name             String     @map("name")
  email            String     @unique @map("email")
  password         String     @map("password")
  createdAt        DateTime?  @default(now())
  ativo            Boolean    @default(true) @map("ativo")
  resetToken       String?
  resetTokenExpiry DateTime?
  updatedAt        DateTime?  @default(now())
  questions        Question[]

  @@map("users")
}

model Question {
  id            String   @id @default(uuid()) @map("id")
  title         String   @map("title")
  description   String   @map("description")
  category      String   @map("category")
  optionA       String   @map("option_a")
  optionB       String   @map("option_b")
  optionC       String   @map("option_c")
  optionD       String   @map("option_d")
  optionE       String   @map("option_e")
  correctOption String   @map("correct_option")
  createdAt     DateTime @default(now())
  ativo         Boolean  @default(true) @map("ativo")
  updatedAt     DateTime @updatedAt
  userId        String   @map("userId")
  user          User     @relation(fields: [userId], references: [id])
  options       Option[]

  @@map("questions")
}

model Option {
  id         String   @id @default(uuid()) @map("id")
  letter     String   @map("letter")
  text       String   @map("text")
  isCorrect  Boolean  @map("is_correct")
  questionId String   @map("question_id")
  question   Question @relation(fields: [questionId], references: [id])

  @@map("options")
}

model Musica {
  id           String       @id @default(uuid()) @map("id")
  name         String       @map("name")
  inicioGem    DateTime     @map("inicio_gem")
  status       Status       @map("status")
  funcao       Funcao       @map("funcao")
  congregacao  String       @map("congregacao")
  batizado     Boolean      @map("batizado")
  dataBatismo  DateTime?    @map("data_batismo")
  instrumento  String       @map("instrumento")
  tonalidade   String       @map("tonalidade")
  estadoCivil  EstadoCivil  @map("estado_civil")

  @@map("musicas")
}

enum Status {
  ALUNO
  ENSAIOS
  REUNIOES_JOVENS
  CULTOS_OFICIAIS
  OFICIALIZADO
}

enum Funcao {
  MUSICO
  ORGANISTA
}

enum EstadoCivil {
  SOLTEIRO
  CASADO
}
