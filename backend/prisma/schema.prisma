generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model User {
  id               String     @id @default(uuid()) @map("id")
  name             String     @map("name")
  email            String     @unique @map("email")
  password         String     @map("password")
  role             Role       @default(USER) @map("role")
  createdAt        DateTime?  @default(now())
  updatedAt        DateTime?  @default(now())
  ativo            Boolean    @default(true) @map("ativo")
  resetToken       String?
  resetTokenExpiry DateTime?
  questions        Question[]

  @@map("users")
}

model Question {
  id            String   @id @default(uuid()) @map("id")
  title         String   @map("title")
  description   String   @map("description")
  category      String   @map("category")
  optionA       String   @map("option_a")
  optionB       String   @map("option_b")
  optionC       String   @map("option_c")
  optionD       String   @map("option_d")
  optionE       String   @map("option_e")
  correctOption String   @map("correct_option")
  createdAt     DateTime @default(now())
  ativo         Boolean  @default(true) @map("ativo")
  updatedAt     DateTime @updatedAt
  userId        String   @map("userId")
  user          User     @relation(fields: [userId], references: [id])
  options       Option[]

  @@map("questions")
}

model Option {
  id         String   @id @default(uuid()) @map("id")
  letter     String   @map("letter")
  text       String   @map("text")
  isCorrect  Boolean  @map("is_correct")
  questionId String   @map("question_id")
  question   Question @relation(fields: [questionId], references: [id])

  @@map("options")
}

model Musica {
  id           String       @id @default(uuid()) @map("id")
  name         String       @map("name")
  inicioGem    DateTime     @map("inicio_gem")
  status       Status       @map("status")
  funcao       Funcao       @map("funcao")
  congregacao  String       @map("congregacao")
  batizado     Boolean      @map("batizado")
  dataBatismo  DateTime?    @map("data_batismo")
  instrumento  String       @map("instrumento")
  tonalidade   String       @map("tonalidade")
  estadoCivil  EstadoCivil  @map("estado_civil")
  ativo        Boolean      @default(true) @map("ativo") 
  createdAt    DateTime     @default(now()) @map("createdAt")
  updatedAt    DateTime     @updatedAt @map("updatedAt")

  @@map("musicas")
}


enum Status {
  ALUNO
  ALUNA
  ENSAIOS
  REUNIOES_JOVENS
  CULTOS_OFICIAIS
  OFICIALIZADO
}

enum Funcao {
  MUSICO
  ORGANISTA
  INSTRUTOR
  INSTRUTORA
  EXAMINADORA
  ENCARREGADO_LOCAL
  ENCARREGADO_REGIONAL
}

enum EstadoCivil {
  SOLTEIRO
  SOLTEIRA
  CASADO
  CASADA
  DIVORCIADO
  DIVORCIADA
  VIUVO
  VIUVA
}

enum Instrumento {
  VIOLINO
  VIOLA
  VIOLONCELO
  CONTRABAIXO_ACUSTICO
  FLAUTA
  CLARINETA
  CLARINETA_ALTA
  CLARINETA_BAIXA
  SAXOFONE_SOPRANO
  SAXOFONE_ALTO
  SAXOFONE_TENOR
  SAXOFONE_BARITONO
  TROMPETE
  TROMBONE
  TROMBONITO
  BOMBARDAO
  TUBA
  ORGAO
}
enum Tonalidade {
  DO_MAIOR
  SI_BEMOL
  MI_BEMOL
  FA_MAIO
}
enum Role {
  ADMIN
  USER
  VISITANTE
}
